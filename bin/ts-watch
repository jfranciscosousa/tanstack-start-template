#!/bin/sh

# TypeScript watch mode script
# This script runs TypeScript compiler in watch mode with setup

set -e  # Exit on error

# Load environment variables
ENV_FILE=.env . bin/load-env

echo "🔍 Starting TypeScript watch mode..."

echo "👀 Watching for TypeScript changes..."
pnpm tsc --project tsconfig.json --noEmit --skipLibCheck --watch
