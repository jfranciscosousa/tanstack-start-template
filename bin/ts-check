#!/bin/sh

# TypeScript type checking script
# This script runs TypeScript compiler for type checking

set -e  # Exit on error

# Load environment variables
ENV_FILE=.env . bin/load-env

echo "ğŸ” Running TypeScript type checking..."

# Generate Prisma client types
echo "ğŸ“¦ Generating Prisma client..."
pnpm prisma generate

echo "ğŸ” Running TypeScript compiler..."
pnpm tsc --project tsconfig.json --noEmit --skipLibCheck
echo "âœ… Type checking completed successfully!"
